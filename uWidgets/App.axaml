<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="uWidgets.App"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <FluentTheme>
            <FluentTheme.Palettes>
                <ColorPaletteResources x:Key="Dark" AltHigh="#2E2E2E" />
            </FluentTheme.Palettes>
        </FluentTheme>
        <Style>
            <Style.Resources>
                <x:Double x:Key="TextOpacity">1.0</x:Double>
            </Style.Resources>
        </Style>
    </Application.Styles>
</Application>