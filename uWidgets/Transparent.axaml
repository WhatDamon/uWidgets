<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="clr-namespace:uWidgets.Services">
    <Style>
        <Style.Resources>
            <services:TransparencyProvider x:Key="TransparencyLevelHint" Value="AcrylicBlur" />
            <SolidColorBrush x:Key="WidgetBackground" Color="{DynamicResource SystemAltHighColor}" Opacity="0.2" />
            <SolidColorBrush x:Key="SettingsBackground" Color="{DynamicResource SystemAltMediumHighColor}" />
            <x:Double x:Key="TextOpacity">0.8</x:Double>
        </Style.Resources>
    </Style>
</Styles>
