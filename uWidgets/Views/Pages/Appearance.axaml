<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:uWidgets.Views.Controls"
             xmlns:viewModels="clr-namespace:uWidgets.ViewModels"
             xmlns:locales="clr-namespace:uWidgets.Locales"
             x:Class="uWidgets.Views.Pages.Appearance"
             x:DataType="viewModels:AppearanceViewModel">
    <StackPanel Orientation="Vertical" Spacing="5">
        <TextBlock FontSize="14" FontWeight="SemiBold" Margin="0 0 0 10" 
                   Text="{x:Static locales:Locale.Settings_Appearance_Theme}"/>
        <controls:Setting Icon="{DynamicResource Brush}" 
            Title="{x:Static locales:Locale.Settings_Appearance_DarkMode_Title}" 
            Subtitle="{x:Static locales:Locale.Settings_Appearance_DarkMode_Subtitle}">
            <ComboBox ItemsSource="{Binding Themes}" MinWidth="130" 
                      SelectedItem="{Binding DarkMode}">
                <ComboBox.ItemTemplate>
                    <DataTemplate DataType="viewModels:ThemeViewModel">
                        <TextBlock Text="{Binding Name}" Margin="0 4" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </controls:Setting>
        <controls:Setting Icon="{DynamicResource Transparency}" 
            Title="{x:Static locales:Locale.Settings_Appearance_Transparency_Title}" 
            Subtitle="{x:Static locales:Locale.Settings_Appearance_Transparency_Subtitle}">
            <ToggleSwitch IsChecked="{Binding Transparency}" />
        </controls:Setting>
        <controls:Setting Icon="{DynamicResource Color}"
            Title="{x:Static locales:Locale.Settings_Appearance_AccentColor_Title}">
            <ColorPicker Color="Aqua" />
        </controls:Setting>
        <TextBlock FontSize="14" FontWeight="SemiBold" Margin="0 20 0 10"
                   Text="{x:Static locales:Locale.Settings_Appearance_Layout}"/>
        <controls:Setting Icon="{DynamicResource WidgetSize}" 
            Title="{x:Static locales:Locale.Settings_Appearance_WidgetSize_Title}"
            Subtitle="{x:Static locales:Locale.Settings_Appearance_WidgetSize_Subtitle}">
            <NumericUpDown MinWidth="130" Minimum="36" Maximum="144" Value="{Binding WidgetSize, StringFormat=F0}" />
        </controls:Setting>
        <controls:Setting Icon="{DynamicResource WidgetMargin}" 
            Title="{x:Static locales:Locale.Settings_Appearance_WidgetMargin_Title}"
            Subtitle="{x:Static locales:Locale.Settings_Appearance_WidgetMargin_Subtitle}">
            <NumericUpDown MinWidth="130" Minimum="0" Maximum="32" Value="{Binding WidgetMargin, StringFormat=F0}" />
        </controls:Setting>
        <controls:Setting Icon="{DynamicResource SnapPosition}" 
                          Title="{x:Static locales:Locale.Settings_Appearance_SnapPosition_Title}" 
                          Subtitle="{x:Static locales:Locale.Settings_Appearance_SnapPosition_Subtitle}">
            <ToggleSwitch IsChecked="{Binding SnapPosition}" />
        </controls:Setting>
    </StackPanel>
</UserControl>
