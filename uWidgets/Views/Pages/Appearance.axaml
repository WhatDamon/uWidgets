<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:uWidgets.Services"
             xmlns:controls="clr-namespace:uWidgets.Views.Controls"
             x:Class="uWidgets.Views.Pages.Appearance">
    <StackPanel Orientation="Vertical" Spacing="5">
        <TextBlock FontSize="14" FontWeight="SemiBold" Text="Theme" Margin="0 0 0 10" />
        <controls:Setting Icon="{DynamicResource Brush}" Title="{services:LocaleService Key=Settings_Appearance_DarkMode_Title}" Subtitle="Change the colors that appear in widgets">
            <TextBlock Text="Test" />
        </controls:Setting>
        <controls:Setting Icon="{DynamicResource Transparency}" Title="Transparency effects" Subtitle="Widgets appear translucent">
            <ToggleSwitch />
        </controls:Setting>
        <Expander>
            <Expander.Header>
                <controls:Setting Icon="{DynamicResource Color}" Title="Accent color" />
            </Expander.Header>
        </Expander>
        <TextBlock FontSize="14" FontWeight="SemiBold" Text="Size" Margin="0 20 0 10" />
        <controls:Setting Icon="{DynamicResource Transparency}" Title="Widget size">
            <ToggleSwitch />
        </controls:Setting>
        <controls:Setting Icon="{DynamicResource Transparency}" Title="Widget margin">
            <ToggleSwitch />
        </controls:Setting>
    </StackPanel>
</UserControl>
