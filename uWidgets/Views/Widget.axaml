<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:locales="clr-namespace:uWidgets.Locales"
        xmlns:views="clr-namespace:uWidgets.Views"
        x:Class="uWidgets.Views.Widget"
        Width="160" Height="160"
        Background="Transparent"
        TransparencyLevelHint="{DynamicResource TransparencyLevelHint}"
        ShowInTaskbar="False"
        SystemDecorations="None"
        x:DataType="views:Widget">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="{x:Static locales:Locale.Widget_Edit}" />
            <Separator />
            <MenuItem Header="{x:Static locales:Locale.Widget_Size}" IsEnabled="False" />
            <MenuItem Header="{x:Static locales:Locale.Widget_Size_Small}" />
            <MenuItem Header="{x:Static locales:Locale.Widget_Size_Medium}" />
            <MenuItem Header="{x:Static locales:Locale.Widget_Size_Large}" />
            <MenuItem Header="{x:Static locales:Locale.Widget_Size_ExtraLarge}" />
            <Separator />
            <MenuItem Header="{x:Static locales:Locale.Widget_Remove}" />
            <Separator />
            <MenuItem Header="{x:Static locales:Locale.Widget_OpenSettings}" />
        </ContextMenu>
    </Window.ContextMenu> 
    <Window.Styles>
        <Style Selector=":is(UserControl)">
            <Setter Property="Margin" Value="12" />
        </Style>
        <Style Selector="Window">
            <Setter Property="Template">
                <ControlTemplate>
                    <Border CornerRadius="24" Background="{DynamicResource WidgetBackground}">
                        <ContentPresenter Content="{TemplateBinding Content}" />
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
    </Window.Styles>
</Window>
